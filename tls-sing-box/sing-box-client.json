{
    "log": {
        "level": "warning",
        "timestamp": true
    },
    "dns": {
        "final": "cloudflare-direct",
        "reverse_mapping": true,
        "servers": [
            {
                "tag": "cloudflare-direct",
                "address": "https://1.1.1.1/dns-query",
                "detour": "direct-out"
            },
            {
                "tag": "google-vless",
                "address": "https://8.8.8.8/dns-query",
                "detour": "vless-out"
            }
        ],
        "rules": [
            {
                "outbound": "any",
                "server": "cloudflare-direct"
            }
        ]
    },
    "inbounds": [
        {
            "tag": "all-in",
            "type": "tun",
            "interface_name": "tun0",
            "address": [
                "172.18.0.1/30",
                "fdfe:dcba:9876::1/126"
            ],
            "auto_route": true,
            "auto_redirect": false,
            "strict_route": true,
            "stack": "system",
            "mtu": 9000
        }
    ],
    "outbounds": [
        {
            "type": "direct",
            "tag": "direct-out"
        },
        {
            "type": "vless",
            "tag": "vless-out",
            "server": "{{ ansible_host }}",
            "server_port": 443,
            "uuid": "{{ sing_box_uuid }}",
            "flow": "xtls-rprx-vision",
            "tls": {
                "enabled": true,
                "server_name": "{{ sni }}",
                "alpn": [
                    "h2"
                ],
                "certificate": [
                    "{{ certificate.json content, every line is new element in array }}"
                ]
            }
        }
    ],
    "route": {
        "final": "direct-out",
        "auto_detect_interface": true,
        "rules": [
            {
                "action": "sniff"
            },
            {
                "action": "reject",
                "protocol": [
                    "quic"
                ]
            },
            {
                "action": "route",
                "outbound": "direct-out",
                "protocol": [
                    "bittorrent",
                    "ssh"
                ]
            },
            {
                "protocol": "dns",
                "action": "hijack-dns"
            }
        ]
    },
    "experimental": {
        "cache_file": {
            "enabled": true
        }
    }
}