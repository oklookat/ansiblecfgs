{
    "log": {
        "level": "warning",
        "timestamp": true
    },
    "dns": {
        "final": "cloudflare-wg",
        "strategy": "ipv4_only",
        "servers": [
            {
                "tag": "cloudflare-direct",
                "address": "https://1.1.1.1/dns-query",
                "detour": "direct-out"
            },
            {
                "tag": "cloudflare-wg",
                "address": "https://1.1.1.1/dns-query",
                "detour": "wg-out"
            }
        ]
    },
    "endpoints": [
        {
            "type": "wireguard",
            "tag": "wg-out",
            "system": false,
            "mtu": 1408,
            "address": [
                "10.18.0.2/24"
            ],
            "private_key": "{{ wg_client_private_key }}",
            "peers": [
                {
                    "address": "{{ server_ip }}",
                    "port": "{{ wg_port }}",
                    "public_key": "{{ wg_server_public_key }}",
                    "allowed_ips": [
                        "0.0.0.0/0"
                    ],
                    "persistent_keepalive_interval": 25
                }
            ]
        }
    ],
    "inbounds": [
        {
            "tag": "all-in",
            "type": "tun",
            "address": [
                "172.18.0.1/30"
            ],
            "auto_route": true,
            "strict_route": true,
            "stack": "system",
            "mtu": 9000
        }
    ],
    "outbounds": [
        {
            "type": "direct",
            "tag": "direct-out"
        }
    ],
    "route": {
        "final": "wg-out",
        "auto_detect_interface": true,
        "rules": [
            {
                "action": "sniff"
            },
            {
                "protocol": "dns",
                "action": "hijack-dns"
            },
            {
                "action": "route",
                "outbound": "direct-out",
                "protocol": [
                    "bittorrent",
                    "ssh"
                ]
            },
            {
                "action": "reject",
                "protocol": [
                    "quic"
                ]
            },
            {
                "action": "route",
                "ip_cidr": "10.18.0.0/24",
                "outbound": "wg-out"
            }
        ]
    },
    "experimental": {
        "cache_file": {
            "enabled": true
        }
    }
}