{
    "log": {
        "level": "warning",
        "timestamp": true
    },
    "dns": {
        "final": "cloudflare-direct",
        "strategy": "prefer_ipv4",
        "servers": [
            {
                "tag": "cloudflare-direct",
                "address": "https://1.1.1.1/dns-query",
                "detour": "direct-out"
            },
            {
                "tag": "google-direct",
                "address": "https://8.8.8.8/dns-query",
                "detour": "direct-out"
            }
        ]
    },
    "endpoints": [
        {
            "type": "wireguard",
            "tag": "wg-in",
            "system": true,
            "mtu": 1408,
            "address": [
                "10.18.0.1/24"
            ],
            "private_key": "{{ wg_server_private_key }}",
            "listen_port": {{ wg_port }},
            "peers": [
                {
                    "public_key": "{{ wg_client_public_key }}",
                    "allowed_ips": [
                        "10.18.0.2/32"
                    ]
                }
            ]
        }
    ],
    "outbounds": [
        {
            "type": "direct",
            "tag": "direct-out"
        }
    ],
    "route": {
        "final": "direct-out",
        "rules": [
            {
                "action": "sniff"
            },
            {
                "protocol": "dns",
                "action": "hijack-dns"
            },
            {
                "action": "reject",
                "protocol": [
                    "bittorrent",
                    "quic"
                ]
            }
        ]
    },
    "experimental": {
        "cache_file": {
            "enabled": true
        }
    }
}
