[Unit]
Description=Xray auto-update
Documentation=https://github.com/XTLS/Xray-install
Wants=network-online.target
After=network-online.target
ConditionPathExists=/usr/local/bin/xray-update.sh

[Service]
Type=oneshot
User=root
ExecStart=/usr/local/bin/xray-update.sh

TimeoutStartSec=10min
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes