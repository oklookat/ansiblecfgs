{
    "log": {
        "loglevel": "warning"
    },
    "dns": {
        "tag": "dns-in",
        "servers": [
            {
                "address": "https://1.1.1.1/dns-query"
            },
            {
                "address": "https://8.8.8.8/dns-query"
            }
        ]
    },
    "routing": {
        "domainStrategy": "IpOnDemand",
        "rules": [
            {
                "type": "field",
                "outboundTag": "direct-out",
                "ip": [
                    "geoip:private"
                ]
            },
            {
                "type": "field",
                "outboundTag": "direct-out",
                "protocol": [
                    "bittorrent"
                ]
            }
        ]
    },
    "inbounds": [
        {
            "tag": "socks-in",
            "listen": "127.0.0.1",
            "port": 1080,
            "protocol": "socks",
            "settings": {
                "auth": "noauth",
                "udp": true,
                "ip": "127.0.0.1"
            },
            "sniffing": {
                "enabled": true,
                "destOverride": [
                    "http",
                    "tls"
                ]
            }
        }
    ],
    "outbounds": [
        {
            "tag": "vless-out",
            "protocol": "vless",
            "settings": {
                "vnext": [
                    {
                        "address": "{{ ansible_host }}",
                        "port": 443,
                        "users": [
                            {
                                "id": "{{ xray uuid }}",
                                "encryption": "none",
                                "flow": ""
                            }
                        ]
                    }
                ]
            },
            "streamSettings": {
                "network": "xhttp",
                "security": "tls",
                "tlsSettings": {
                    "serverName": "{{ sni }}",
                    "minVersion": "1.2",
                    "maxVersion": "1.3",
                    "fingerprint": "chrome",
                    "disableSystemRoot": true,
                    "verifyPeerCertInNames": [
                        "{{ sni }}"
                    ],
                    "alpn": [
                        "h2"
                    ],
                    "certificates": [
                        {
                            "certificate": [
                                "{{ certificate.json content, every line is new element in array }}"
                            ],
                            "key": [
                                "{{ certificate-key.json content, every line is new element in array }}"
                            ]
                        }
                    ]
                },
                "xhttpSettings": {
                    "host": "{{ sni }}",
                    "path": "{{ xhttp_path }}"
                }
            }
        },
        {
            "tag": "direct-out",
            "protocol": "freedom"
        },
        {
            "tag": "block-out",
            "protocol": "blackhole"
        }
    ]
}