[Unit]
Description=Xray auto-update
Documentation=https://github.com/XTLS/Xray-install
Wants=network-online.target
After=network-online.target
ConditionPathExists=/usr/local/bin/{{ xray_autoupdate_helper }}

[Service]
Type=oneshot
User=root
ExecStart=/usr/local/bin/{{ xray_autoupdate_helper }}

TimeoutStartSec=10min
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
